@using Microsoft.AspNetCore.Identity
@model LoginViewModel
@inject SignInManager<IdentityUser> SignInManager

@{
	ViewData["Title"] = "Login";
}
<link rel="stylesheet" type="text/css" href="~/css/login.css">

<h1 class="text-center my-2">Login</h1>

<section>
	<div class="container">
		<div class="row">
			<div class="col-md-4 offset-md-4 mt-4">
				<form class="d-flex flex-column gap-3" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
					<div asp-validation-summary="All" class="text-danger"></div>
					<div class="form-group">
						<label asp-for="Email"></label>
						<input asp-for="Email" class="form-control input_mail" />
						<span asp-validation-for="Email" class="text-danger"></span>
					</div>
					<div class="form-group">
						<label asp-for="Password"></label>
						<input asp-for="Password" class="form-control input_mail" />
						<span asp-validation-for="Password" class="text-danger"></span>
					</div>
					<div class="form-group form-check form-switch" rol>
						<div class="checkbox">
							<label asp-for="RememberMe">
								<input asp-for="RememberMe" class="form-check-input bg-light" id="aaaa"/>
								@Html.DisplayNameFor(m => m.RememberMe)
							</label>
						</div>
					</div>
					<div class="form-group d-flex justify-content-center mt-2">
						<button type="submit" class="btn btn-lg btn-success">Login</button>
					</div>
					<div class="form-group text-center mt-4">
						<p>
							No account?
							<a asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]" class="button_register"> Create one</a>
						</p>
					</div>
				</form>
			</div>
		</div>
	</div>
</section>

@section Scripts {
	@await Html.PartialAsync("_ValidationScriptsPartial")
}
