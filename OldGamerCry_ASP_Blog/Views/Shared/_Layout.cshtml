<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="author" content="Tomas Sobota">
    <meta name="keywords" content="Old Videogames, Old Pc games, Blog about games, Retrogames">
    <meta name="description" content="Personal blog about old computer videogames">

    <title>@ViewData["Title"] - OldGamerCry Blog</title>

    <link rel="shortcut icon" type="image/ico" href="~//img/icon.ico">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/OldGamerCry_ASP_Blog.styles.css" asp-append-version="true" />
    @*Summernote editor*@
    <link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light register w-100">
            <div class="register w-100">
                <button class="navbar-toggler me-3 " type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between w-100 menu">
                    <ul class="navbar-nav flex-grow-1 ms-md-5 fw-bold ">
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Articles" asp-action="Index">Articles</a>
                        </li>
                    </ul>
                        <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <main role="main" class="pb-1 pb-md-5">
            @RenderBody()
        </main>
  

    <footer class="footer text-muted text-center">
        <div class="container">
            <a class="text-decoration-none text-light" target="_blank" href="http://xcom3.borec.cz/moje/index.html">&copy; Design and code by Tomas Sobota</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @*Summernote editor*@
    <script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.js"></script>

    @*Summernote editor start*@
    <script>
        $('#Content').summernote();
    </script>
    @await RenderSectionAsync("Scripts", required: false)
   
   
   
</body>
</html>
