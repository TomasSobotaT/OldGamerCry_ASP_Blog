@model List<pokusoblog2.Models.Article>

@{
	ViewData["Title"] = "OldGameCry Blog";
}
@*BACKGROUND*@
<div class="mb-5">
	<div class="background img-fluid"></div>
</div>



@*ARTICLES*@
<section>
	<div class="container">
		<div class="row">
			@{
			int	ArticlesCount = Model.Count()-1;
			}

			@for (int i = ArticlesCount; i >= 0; i--)
			{
@*				string currentDirectoryImage = System.IO.Path.Combine(Directory.GetCurrentDirectory(), Model[i].ImagePath);
*@				
				//last added article
				if (i == ArticlesCount)
				{
					<div class="col-lg-6">
							<a asp-controller="Articles" asp-action="Details" asp-route-id="@Model[i].Id" class="text-decoration-none link-light">
						<div class="article_main d-flex justify-content-center align-items-center mx-lg-1 my-4 flex-column text-dark">
								<img src="~/@Model[i].ImagePath" alt="@Model[i].Title" class="img-fluid">
								<div class="col-11 offset-1 pt-5">
									<h2>@Model[i].Title</h2>
									<p>@Model[i].Description</p>
									<p>@Model[i].CreatedDate</p>
									
								</div>
						</div>
							</a>
					</div>
				}

				//four articles on right side
				if (i == (ArticlesCount-1))
				{
					<div class="col-lg-6 d-flex flex-wrap col-12">
						@for (; i > (ArticlesCount-5); i--)
						{
							if(i>=0)
							{
							<div class="col-lg-6 col-12">
									<a asp-controller="Articles" asp-action="Details" asp-route-id="@Model[i].Id"  class="text-decoration-none link-light">
								<div class="article d-flex justify-content-center align-items-center mx-lg-1 me-lg-3 my-4 flex-column text-dark">
										<img src="~/@Model[i].ImagePath" alt="@Model[i].Title" class="img-fluid">
										<div class="col-11 offset-1 pt-2">
											<h5>@Model[i].Title</h5>
											<p>@Model[i].Description</p>
											<p>@Model[i].CreatedDate</p>
										</div>
								</div>
									</a>
							</div>
							}
						}
					</div>
				}

				//other articles
				if (i < (ArticlesCount-4) && i>=0)
				{
					<div class="col-lg-3">
							<a asp-controller="Articles" asp-action="Details" asp-route-id="@Model[i].Id" class="text-decoration-none link-light">
						<div class="article d-flex justify-content-center align-items-center mx-lg-1 my-4 flex-column text-dark">
								<img  src="~/@Model[i].ImagePath" alt="@Model[i].Title" class="img-fluid">
								<div class="col-11 offset-1 pt-2">
									<h5>@Model[i].Title</h5>
									<p>@Model[i].Description</p>
									<p>@Model[i].CreatedDate</p>
								</div>
						</div>
							</a>
					</div>
				}



			}

		</div>
	</div>
</section>

