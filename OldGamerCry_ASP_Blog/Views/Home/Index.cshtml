@model List<pokusoblog2.Models.Article>

@{
	ViewData["Title"] = "OldGameCry Blog";
}
@*BACKGROUND*@
<div class="mb-5">
	<div class="background img-fluid"></div>
</div>



@*ARTICLES*@
<section class="">
	<div class="container">
		<div class="row  d-flex justify-content-start align-content-start align-items-start">

			@for (int i = 0; i < Model.Count(); i++)
			{
@*				string currentDirectoryImage = System.IO.Path.Combine(Directory.GetCurrentDirectory(), Model[i].ImagePath);
*@
				if (i == 0)
				{
					<div class="col-lg-6">
						<div class="article_main d-flex justify-content-center align-items-center mx-lg-1 my-4 flex-column">
							<a asp-controller="Articles" asp-action="Details" asp-route-id="@Model[i].Id" class="text-decoration-none ">
								<img src="~/@Model[i].ImagePath" alt="@Model[i].Title" class="img-fluid border border-danger">
								<div class="col-11 offset-1 pt-5">
									<h2>@Model[i].Title</h2>
									<p>@Model[i].Description</p>
									<p>@Model[i].CreatedDate</p>
									
								</div>
							</a>
						</div>
					</div>
				}
				if (i == 1)
				{
					<div class="col-lg-6 d-flex flex-wrap col-12">
						@for (; i < 5; i++)
						{
							<div class="col-lg-6 col-12">
								<div class="article d-flex justify-content-center align-items-center mx-lg-1 me-lg-3 my-4 flex-column">
									<a asp-controller="Articles" asp-action="Details" asp-route-id="@Model[i].Id"  class="text-decoration-none ">
										<img src="~/@Model[i].ImagePath" alt="@Model[i].Title class="img-fluid">
										<div class="col-11 offset-1 pt-2">
											<h5>@Model[i].Title</h5>
											<p>@Model[i].Description</p>
											<p>@Model[i].CreatedDate</p>>
										</div>
									</a>
								</div>
							</div>

							
								
						
							
						}
					</div>
				}
				if (i > 4)
				{
					<div class="col-lg-3">
						<div class="article d-flex justify-content-center align-items-center mx-lg-1 my-4 flex-column">
							<a asp-controller="Articles" asp-action="Details" asp-route-id="@Model[i].Id" class="text-decoration-none ">
								<img  src="~/@Model[i].ImagePath" alt="@Model[i].Title class="img-fluid">
								<div class="col-11 offset-1 pt-2">
									<h5>@Model[i].Title</h5>
									<p>@Model[i].Description</p>
									<p>@Model[i].CreatedDate</p>>
								</div>
							</a>
						</div>
					</div>
				}



			}

		</div>
	</div>
</section>

