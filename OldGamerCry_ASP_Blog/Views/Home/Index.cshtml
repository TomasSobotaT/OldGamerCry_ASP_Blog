@model List<pokusoblog2.Models.Article>

@{
	ViewData["Title"] = "Home Page";
}
@*BACKGROUND*@
<div class="mb-5">
	<div class="background"></div>
</div>



@*ARTICLES*@
<section class="">
	<div class="container">
		<div class="row  d-flex justify-content-start align-content-start align-items-start">

			@for (int i = 0; i < Model.Count(); i++)
			{
				string currentDirectoryImage = System.IO.Path.Combine(Directory.GetCurrentDirectory(), Model[i].ImagePath);

				if (i == 0)
				{
					<div class="col-sm-6">
						<div class="article_main d-flex justify-content-center align-items-center mx-sm-1 my-4 flex-column">
							<a href="" class="text-decoration-none ">
								<img href="@currentDirectoryImage" alt="" class="img-fluid border border-danger">
								<div class="col-11 offset-1 pt-5">
									<h2>@Model[i].Title</h2>
									<p>@Model[i].Description</p>
									<p>@Model[i].CreatedDate</p>
								</div>
							</a>
						</div>
					</div>
				}
				else if (i == 1)
				{
					<div class="col-sm-6 d-flex flex-wrap col-12">
						@for (; i < 5; i++)
						{
							<div class="col-sm-6 col-12">
								<div class="article d-flex justify-content-center align-items-center mx-sm-1 me-sm-3 my-4 flex-column">
									<a href="" class="text-decoration-none ">
										<img src="images/2.png" alt="" class="img-fluid">
										<div class="col-11 offset-1 pt-2">
											<h5>Beyond good and evil</h5>
											<p>nejlepší hra a rpeg sfsafa </p>
											<p>10.1.2022</p>
										</div>
									</a>
								</div>
							</div>
						}
					</div>
				}
				else
				{
					<div class="col-sm-3">
						<div class="article d-flex justify-content-center align-items-center mx-sm-1 my-4 flex-column">
							<a href="" class="text-decoration-none ">
								<img src="images/6.png" alt="" class="img-fluid">
								<div class="col-11 offset-1 pt-2">
									<h5>Beyond good and evil</h5>
									<p>nejlepší hra a rpeg sfsafa </p>
									<p>10.1.2022</p>
								</div>
							</a>
						</div>
					</div>
				}



			}

		</div>
	</div>
</section>

